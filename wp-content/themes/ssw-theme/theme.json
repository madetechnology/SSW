{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
		"dimensions": {
			"minHeight": true
		},
        "spacing": {
			"units": [ "px","em","rem", "%"],
            "margin": true,
			"padding": true,
            "customSpacingSize": true, 
            "spacingScale": {
				"operator": "*",
				"increment": 1.5,
				"steps": 7,
				"mediumStep": 1.5,
				"unit": "rem"
			}
		},
        
        "layout": {
            "contentSize": "1183px",
            "wideSize" : "1183px"
        }, 
        "color":{
            "palette": [
                {
                    "slug": "ssw-green", 
                    "color": "#34B78C", 
                    "name": "Green"
                }, 
                {
                    "slug": "ssw-white", 
                    "color": "#F7F7F7", 
                    "name": "White"
                }, 
                {
                    "slug": "ssw-grey", 
                    "color": "#273039", 
                    "name": "Grey"
                }
            ],
            "text": false
        }, 
        "typography": {
            "fontFamilies": [{
                "fontFamily": "'Inter', sans-serif",
                "slug":"inter",
                "name": "Body - Inter", 
                "fontFace": [
                    {
                    "fontFamily": "'Inter', sans-serif",
                    "fontWeight": "300",
                    "fontStyle": "normal",
                    "fontStretch": "normal",
                    "src":["file:./assets/fonts/inter/Inter-Light.ttf"]
                },
                {
                    "fontFamily": "'Inter', sans-serif",
                    "fontWeight": "400",
                    "fontStyle": "normal",
                    "fontStretch": "normal",
                    "src":["file:./assets/fonts/inter/Inter-Regular.ttf"]
                }
            ]
            },
            {
                "fontFamily": "Stolzl, Arial, sans-serif", 
                "slug": "stolzl",
                "name": "Headings - Stolzl"
            }
        ]
        },
        "custom": {
            "typography":{
                "font-size":{
                    "heading-1": "clamp(2.113rem, 1.9252rem + 0.9390000000000001vw, 3.052rem)",
                    "heading-2": "clamp(1.699rem, 1.5506000000000002rem + 0.7419999999999998vw, 2.441rem)",
                    "heading-3": "clamp(1.35rem, 1.2294rem + 0.603vw, 1.953rem)",
                    "heading-4": "clamp(1.253rem, 1.1909999999999998rem + 0.31000000000000005vw, 1.563rem)",
                    "heading-5": "clamp(1.063rem, 1.0255999999999998rem + 0.18700000000000006vw, 1.25rem)",
                    "heading-6": "clamp(1.063rem, 1.0255999999999998rem + 0.18700000000000006vw, 1.25rem)"
                }
            }
        }
        }, 
        "styles": {
            "blocks": {
                "core/button": {
                    "border": {
                        "color": "green",
                        "radius": "5px"
                    },
                    "color": {
                        "background":"var(--wp--preset--color--ssw-green)"
                    }
                }
            },
            "color": {
                "background": "var(--wp--preset--color--white)", 
                "text": "var(--wp--preset--color--ssw-grey)"
                
            },
            "typography": {
                "fontFamily":"var(--wp--preset--font-family--inter)",
                "lineHeight": "1.75",
                "fontSize": "1rem"
            }, 
            "elements": {
                "h1": {
                    "typography": {
                        "fontFamily": "var(--wp--preset--font-family-stolzl)",
                        "fontWeight": "800", 
                        "lineHeight": "1.3", 
                        "fontSize": "var(--wp--custom--typography--font-size--heading-1)"
                    }
                }, 
                "h2": {
                    "typography": {
                        "fontFamily": "var(--wp--preset--font-family-stolzl)",
                        "fontWeight": "800", 
                        "lineHeight": "1.3", 
                        "fontSize": "var(--wp--custom--typography--font-size--heading-2)"
                    }
                },
                "h3": {
                    "typography": {
                        "fontFamily": "var(--wp--preset--font-family-stolzl)",
                        "fontWeight": "800", 
                        "lineHeight": "1.3", 
                        "fontSize": "var(--wp--custom--typography--font-size--heading-3)"
                    }
                }, 
                "h4": {
                    "typography": {
                        "fontFamily": "var(--wp--preset--font-family-stolzl)",
                        "fontWeight": "800", 
                        "lineHeight": "1.3", 
                        "fontSize": "var(--wp--custom--typography--font-size--heading-4)"
                    }
                }, 
                "h5": {
                    "typography": {
                        "fontFamily": "var(--wp--preset--font-family-stolzl)",
                        "fontWeight": "800", 
                        "lineHeight": "1.3", 
                        "fontSize": "var(--wp--custom--typography--font-size--heading-5)"
                    }
                }, 
                "h6": {
                    "typography": {
                        "fontFamily": "var(--wp--preset--font-family-stolzl)",
                        "fontWeight": "800", 
                        "lineHeight": "1.3", 
                        "fontSize": "var(--wp--custom--typography--font-size--heading-6)"
                    }
                }

            }
        },

        "templateParts": [
            {
                "name": "header",
                "area": "header",
                "title": "Header"

            },
            {
                "name": "footer",
                "area": "footer",
                "title": "Footer"

            }
        ]
}